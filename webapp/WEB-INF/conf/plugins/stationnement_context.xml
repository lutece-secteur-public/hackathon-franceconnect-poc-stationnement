<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd" >

    <bean id="stationnement.dataClientUser" class="fr.paris.lutece.plugins.stationnement.dataclient.UserDataClient">
        <property name="name" value="user" />
        <property name="dataServerUri" value="https://fcp.integ01.dev-franceconnect.fr/api/v1/userinfo"/>
        <property name="tokenMethod" value="HEADER"/>
        <property name="scope">
            <set value-type="java.lang.String">
                <value>openid</value>
                <value>profile</value>
                <value>email</value>
                <value>address</value>
                <value>phone</value>
            </set>
        </property>
    </bean>

    <bean id="stationnement.dataClientAdresse" class="fr.paris.lutece.plugins.stationnement.dataclient.AdresseDataClient">
        <property name="name" value="adresse" />
        <property name="dataServerUri" value="https://datafranceconnect.opendatasoft.com/api/records/1.0/search?dataset=dgfip_rp"/>
        <property name="tokenMethod" value="HEADER"/>
        <property name="scope">
            <set value-type="java.lang.String">
                <value>ods_dgfip_rp</value>
            </set>
        </property>
    </bean>

</beans>
